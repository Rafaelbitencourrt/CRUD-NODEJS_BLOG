<body>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header"><h2>Edição de artigos</h2></div>

      <hr />
      <div class="card-body">
        <form method="POST" action="/articles/update">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Defina o titulo da categoria"
            value="<%= article.title %>"
          />
          <input type="hidden" name="id" value="<%= article.id %> " />
          <br />
          <button class="btn btn-success">Atualizar</button>
        </form>
      </div>
    </div>
  </div>
</body>

